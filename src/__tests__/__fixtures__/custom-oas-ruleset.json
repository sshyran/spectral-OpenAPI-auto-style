{
  "extends": ["spectral:oas"],
  "rules": {
    "info-matches-stoplight": {
      "message": "Info must contain Stoplight",
      "given": "$.info",
      "type": "style",
      "recommended": true,
      "then": {
        "field": "title",
        "function": "pattern",
        "functionOptions": {
          "match": "Stoplight"
        }
      }
    }
  },
  "except": {
    "/test/file.yaml#/info": ["info-contact", "info-description"],
    "another.yaml#": ["dummy-rule", "info-contact"]
  }
}
